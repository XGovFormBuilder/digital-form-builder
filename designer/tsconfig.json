{
  "baseUrl": ".",
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2015",
    "rootDirs": ["server"],
    "outDir": "dist",
    "composite": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "server", 
    "client", 
    "package.json", 
    "config.js"
  ],
  "paths": {
    "*": [
      "node_modules/*",
      "../node_modules"
    ]
  }
}