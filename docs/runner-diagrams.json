{
  "$schema": "https://arkit.pro/schema.json",
  "excludePatterns": [
    "test/**",
    "tests/**",
    "**/*.test.*",
    "**/*.spec.*",
    "webpack.config*"
  ],
  "components": [
    {
      "type": "Dependency",
      "patterns": ["node_modules/*"],
      "format": "full"
    },
    {
      "type": "Files",
      "patterns": ["src/**/*.ts"],
      "format": "full"
    }
  ],
  "output": [
    {
      "path": "docs/architecture-diagram-server.svg",
      "groups": [
        {
          "type": "Engine",
          "patterns": ["src/server/plugins/engine/**"]
        },
        {
          "last": true,
          "type": "Server",
          "patterns": ["src/server/**"]
        },
        {
          "last": true,
          "type": "Dependencies",
          "components": ["Dependency"]
        }
      ]
    }
  ]
}
