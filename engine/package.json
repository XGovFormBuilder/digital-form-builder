{
  "name": "@xgovformbuilder/engine",
  "version": "2.0.0",
  "description": "A hapi plugin providing the engine for XGov digital form builder based applications",
  "main": "dist/index.js",
  "scripts": {
    "fix-lint": "yarn run eslint ./ -c ../.eslintrc.json --fix",
    "lint": "yarn run eslint ./ -c ../.eslintrc.json",
    "build": "yarn run babel --extensions '.js,.ts' src -d dist --source-maps inline --copy-files && yarn run build:types",
    "watch": "yarn build --watch",
    "test": "yarn type-check && yarn test-lab",
    "test-lab": "lab -T test/.transform.js test/**/*.test.* -S -v test/cases -r console -o stdout -r html -o unit-test.html -I version,regeneratorRuntime",
    "test-lab-cov": "lab -T test/.transform.js test/**/*.test.* -S -v -r console -o stdout -r html -o test-coverage/lab/unit-test.html -r junit -o test-results/lab/unit-test.xml -I version,regeneratorRuntime",
    "test-cov": "yarn test-lab-cov",
    "type-check": "tsc --noEmit",
    "build:types": "tsc --emitDeclarationOnly"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/XGovFormBuilder/digital-form-builder/tree/master/engine"
  },
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@babel/runtime": "7.10.4",
    "@hapi/hoek": "^9.0.4",
    "@xgovformbuilder/model": "2.0.0",
    "boom": "7.3.0",
    "expr-eval": "2.0.2",
    "govuk-frontend": "3.6.0",
    "hmpo-components": "2.6.5",
    "joi": "17.2.1",
    "moment": "2.24.0",
    "nanoid": "^3.1.12",
    "nunjucks": "3.2.1",
    "path": "0.12.7",
    "wreck": "14.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/eslint-parser": "^7.11.3",
    "@babel/eslint-plugin": "^7.11.3",
    "@babel/plugin-proposal-class-properties": "7.10.1",
    "@babel/plugin-proposal-export-default-from": "^7.10.1",
    "@babel/plugin-proposal-private-methods": "^7.10.1",
    "@babel/plugin-proposal-private-property-in-object": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.4",
    "@hapi/code": "^8.0.1",
    "@hapi/lab": "^24.0.0",
    "@xgovformbuilder/lab-babel": "2.1.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.6.0",
    "eslint-6": "npm:eslint@6",
    "eslint-7": "npm:eslint@^7.1.0",
    "eslint-plugin-import": "^2.22.0",
    "sinon": "^9.0.2",
    "standard": "14.3.3",
    "typescript": "^4.0.3"
  }
}
