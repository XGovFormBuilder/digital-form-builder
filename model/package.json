{
  "name": "@xgovformbuilder/model",
  "version": "2.0.0",
  "description": "A hapi plugin providing the model for XGov digital form builder based applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "yarn type-check && yarn test-lab",
    "test-cov": "yarn flow && yarn lint && yarn test-lab-cov",
    "test-lab": "lab -T ../node_modules/lab-transform-typescript test/*.test.ts -S -v test -r console -o stdout -r html -o unit-test.html -I version",
    "test-lab-cov": "lab -T ../node_modules/lab-transform-typescript test/*.test.ts -S -v -r console -o stdout -r html -o test-coverage/lab/unit-test.html  -r junit -o test-results/lab/unit-test.xml -I version",
    "build": "yarn run build:types && yarn run build:ts",
    "build:ts": "babel --extensions '.ts' src --out-dir dist --source-maps",
    "build:types": "tsc --emitDeclarationOnly",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/XGovFormBuilder/digital-form-builder/tree/master/model"
  },
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@babel/eslint-plugin": "^7.11.3",
    "@babel/runtime": "^7.11.2",
    "@hapi/hoek": "^9.0.4",
    "boom": "7.3.0",
    "btoa": "^1.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "expr-eval": "2.0.2",
    "govuk-frontend": "3.6.0",
    "hmpo-components": "2.6.5",
    "joi": "17.2.1",
    "moment": "2.24.0",
    "nunjucks": "3.2.1",
    "path": "0.12.7",
    "wreck": "14.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/eslint-parser": "^7.11.3",
    "@babel/plugin-proposal-class-properties": "7.10.1",
    "@babel/plugin-proposal-export-default-from": "^7.10.1",
    "@babel/plugin-proposal-private-methods": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-flow": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@hapi/code": "^8.0.1",
    "@hapi/lab": "^24.0.0",
    "@xgovformbuilder/lab-babel": "2.1.2",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.6.0",
    "flow-bin": "^0.134.0",
    "flow-mono-cli": "^1.5.3",
    "flow-typed": "^3.2.1",
    "lab-transform-typescript": "^3.0.1",
    "sinon": "^9.0.2",
    "typescript": "^4.0.3"
  }
}
