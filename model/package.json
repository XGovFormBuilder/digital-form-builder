{
  "name": "@xgovformbuilder/model",
  "version": "2.0.0",
  "description": "A hapi plugin providing the model for XGov digital form builder based applications",
  "main": "./dist/index.js",
  "browser": "./lib/index.js",
  "module": "./module/index.js",
  "scripts": {
    "build-browser": "cross-env BABEL_ENV=browser babel ./src --out-dir ./lib --source-maps --copy-files",
    "build-module": "cross-env BABEL_ENV=module babel ./src --out-dir ./module --source-maps --copy-files",
    "build-node": "babel ./src --out-dir ./dist --source-maps --copy-files",
    "build": "yarn run build-node && yarn run build-browser && yarn run build-module",
    "fix-lint": "yarn run eslint ./ -c ../.eslintrc.json --fix",
    "lint": "yarn run eslint ./ -c ../.eslintrc.json",
    "watch": "bash -c 'nohup yarn run babelupward src -d lib --source-maps inline'",
    "test-lab": "lab -T test/.transform.js -S -v -P 'test' test -r console -o stdout -r html -o unit-test.html -I version",
    "test": "yarn flow && yarn lint && yarn test-lab",
    "test-lab-cov": "lab -T test/.transform.js test/*.test.js -S -v -r console -o stdout -r html -o test-coverage/lab/unit-test.html  -r junit -o test-results/lab/unit-test.xml -I version",
    "test-cov": "yarn flow && yarn lint && yarn test-lab-cov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/XGovFormBuilder/digital-form-builder/tree/master/model"
  },
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@babel/eslint-plugin": "^7.11.3",
    "@babel/runtime": "^7.11.2",
    "@hapi/hoek": "^9.0.4",
    "@hapi/joi": "17.1.1",
    "boom": "7.3.0",
    "btoa": "^1.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "expr-eval": "2.0.2",
    "govuk-frontend": "3.6.0",
    "hmpo-components": "2.6.5",
    "moment": "2.24.0",
    "nunjucks": "3.2.1",
    "path": "0.12.7",
    "wreck": "14.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/eslint-parser": "^7.11.3",
    "@babel/plugin-proposal-class-properties": "7.10.1",
    "@babel/plugin-proposal-export-default-from": "^7.10.1",
    "@babel/plugin-proposal-private-methods": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-flow": "^7.10.4",
    "@hapi/code": "^8.0.1",
    "@hapi/lab": "^22.0.4",
    "@xgovformbuilder/lab-babel": "2.1.2",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.6.0",
    "flow-bin": "^0.134.0",
    "flow-mono-cli": "^1.5.3",
    "flow-typed": "^3.2.1",
    "sinon": "^9.0.2"
  }
}
