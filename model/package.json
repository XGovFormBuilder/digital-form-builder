{
  "name": "digital-form-builder-model",
  "version": "1.0.0",
  "description": "A hapi plugin providing the model for XGov digital form builder based applications",
  "main": "index.js",
  "module": "src/lib.js",
  "scripts": {
    "fix-lint": "standard --fix",
    "lint": "standard",
    "build": "babel src -d lib --source-maps inline",
    "build:watch": "babel src -d lib --source-maps inline --watch",
    "test-lab": "lab -T node_modules/@xgovformbuilder/lab-babel -S -v -P 'test' test -r console -o stdout -r html -o unit-test.html -I version",
    "test": "npm run-script lint && npm run-script test-lab"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/XGovFormBuilder/digital-form-builder/tree/master/model"
  },
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@babel/runtime": "7.10.4",
    "@hapi/hoek": "^9.0.4",
    "@hapi/joi": "17.1.1",
    "boom": "7.3.0",
    "expr-eval": "2.0.2",
    "govuk-frontend": "3.6.0",
    "hmpo-components": "2.6.5",
    "joi": "14.3.1",
    "moment": "2.24.0",
    "nunjucks": "3.2.1",
    "path": "0.12.7",
    "wreck": "14.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-export-default-from": "^7.10.1",
    "@babel/plugin-proposal-private-methods": "^7.10.1",
    "@babel/plugin-proposal-class-properties": "7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "babel-eslint": "11.0.0-beta.2",
    "@hapi/code": "^8.0.1",
    "@hapi/lab": "^22.0.4",
    "@xgovformbuilder/lab-babel": "2.0.0",
    "standard": "14.3.3"
  },
  "peerDependencies": {
    "joi": "^14"
  },
  "standard": {
    "ignore": [
      "lib"
    ],
    "parser": "babel-eslint"
  }
}
