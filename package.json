{
  "name": "digital-form-builder",
  "version": "0.1.0",
  "description": "Starter project for digital form builder applications",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "build:css": "bin/build-css",
    "build": "bin/build",
    "lint": "standard",
    "unit-test": "lab -v -P *.js test/cases",
    "test": "npm run lint && npm run unit-test",
    "postinstall": "npm run build",
    "a11y": "node test/audit/components && node lighthouse"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DEFRA/digital-form-builder"
  },
  "author": "Department for Environment, Food and Rural Affairs <https://www.gov.uk/government/organisations/department-for-environment-food-rural-affairs>.",
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@hapi/boom": "^8.0.1",
    "accept-language-parser": "^1.5.0",
    "acorn": "^6.3.0",
    "boom": "7.2.2",
    "chrome-launcher": "^0.11.2",
    "digital-form-builder-engine": "CautionYourBlast/digital-form-builder-engine",
    "govuk-frontend": "2.3.0",
    "hapi": "17.7.0",
    "inert": "5.1.2",
    "joi": "^14",
    "lighthouse": "^5.5.0",
    "nunjucks": "3.1.4",
    "pdfmake": "0.1.39",
    "standard": "12.0.1",
    "vision": "5.4.3",
    "yar": "9.1.0"
  },
  "devDependencies": {
    "blipp": "3.1.1",
    "cheerio": "1.0.0-rc.2",
    "code": "5.2.3",
    "good": "8.1.1",
    "good-console": "7.1.0",
    "good-file": "6.0.1",
    "good-squeeze": "5.1.0",
    "lab": "18.0.0",
    "node-sass": "4.10.0"
  },
  "lighthouse": {
    "requiredScores": {
      "accessibility": 90
    }
  }
}
