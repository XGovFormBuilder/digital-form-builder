{
  "name": "@xgovformbuilder/runner",
  "version": "2.0.0",
  "description": "Digital forms runner",
  "main": "src/index.js",
  "scripts": {
    "start": "NODE_ENV=development node dist/index.js",
    "start:local": "NODE_ENV=development PREVIEW_MODE=true node dist/index.js",
    "dev": "bash -c 'yarn run watch & NODE_ENV=development yarn node dist/index.js'",
    "build": "yarn build:css && yarn babel-build",
    "build:css": "bin/build-css",
    "babel-build": "babel --extensions '.js,.ts' src -d dist --copy-files --minified -s inline",
    "lint": "yarn run eslint ./ -c ../.eslintrc.json",
    "fix-lint": "yarn run eslint ./ -c ../.eslintrc.json --fix",
    "test": "NODE_ENV=test yarn run unit-test",
    "test-cov": "NODE_ENV=test yarn run lint && yarn run unit-test-cov",
    "unit-test": "lab -T test/.transform.js -P test/**/*.test.* -v test -S -v -r console -o stdout -r html -o unit-test.html -I version -l",
    "unit-test:dev": "DEBUG=true lab -T test/.transform.js -P test/**/*.test.* -v test  --inspect-brk",
    "unit-test-cov": "lab -T test/.transform.js -P test/**/*.test.* -v test -S -v -r console -o stdout -r html -o test-coverage/lab/unit-test.html -r junit -o test-results/junit/unit-test.xml -I version -l",
    "a11y": "node test/audit/components && node lighthouse",
    "symlink-env": "./bin/symlink-config",
    "watch": "bash -c 'yarn run babel src -d dist --copy-files --watch -s inline'",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/XGovFormBuilder/digital-form-builder/tree/master/builder"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@babel/runtime": "7.10.4",
    "@hapi/boom": "9.1.0",
    "@hapi/catbox": "11.1.0",
    "@hapi/catbox-memory": "5.0.0",
    "@hapi/catbox-redis": "5.0.5",
    "@hapi/code": "8.0.1",
    "@hapi/crumb": "8.0.0",
    "@hapi/hapi": "19.1.1",
    "@hapi/lab": "24.0.0",
    "@hapi/scooter": "6.0.0",
    "@hapi/wreck": "17.0.0",
    "@xgovformbuilder/engine": "2.0.0",
    "accept-language-parser": "1.5.0",
    "accessible-autocomplete": "^2.0.2",
    "acorn": "7.1.1",
    "aws-sdk": "2.655.0",
    "blankie": "5.0.0",
    "blipp": "4.0.1",
    "boom": "7.3.0",
    "chrome-launcher": "0.13.1",
    "dotenv": "8.2.0",
    "flat": "5.0.0",
    "form-data": "3.0.0",
    "googleapis": "48.0.0",
    "govuk-frontend": "3.6.0",
    "hapi-pino": "8.0.0",
    "hapi-pulse": "3.0.0",
    "hapi-rate-limit": "4.1.0",
    "hapi-require-https": "5.0.0",
    "hmpo-components": "2.6.5",
    "inert": "5.1.3",
    "ioredis": "4.16.1",
    "joi": "17.2.1",
    "lighthouse": "5.6.0",
    "lodash-es": "^4.17.15",
    "nanoid": "^3.1.12",
    "nodemailer": "6.4.6",
    "notifications-node-client": "4.7.3",
    "nunjucks": "3.2.1",
    "pdfmake": "0.1.65",
    "rollup-plugin-includepaths": "^0.2.3",
    "schmervice": "1.5.0",
    "sinon": "9.0.2",
    "standard": "^14.3.4",
    "tmp": "0.1.0",
    "uuid": "7.0.3",
    "vision": "5.4.4",
    "yar": "9.1.0"
  },
  "devDependencies": {
    "@babel/cli": "7.10.3",
    "@babel/core": "^7.11.4",
    "@babel/eslint-parser": "^7.11.3",
    "@babel/eslint-plugin": "^7.11.3",
    "@babel/plugin-proposal-class-properties": "7.10.1",
    "@babel/plugin-proposal-private-methods": "^7.10.1",
    "@babel/plugin-transform-classes": "^7.10.1",
    "@babel/plugin-transform-modules-commonjs": "7.10.1",
    "@babel/plugin-transform-runtime": "7.10.3",
    "@babel/preset-env": "7.10.3",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "7.10.3",
    "@xgovformbuilder/lab-babel": "2.1.2",
    "babel-eslint": "^10.1.0",
    "cheerio": "1.0.0-rc.3",
    "code": "5.2.4",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.22.0",
    "lab": "18.0.2",
    "node-sass": "4.13.1",
    "typescript": "^4.0.3"
  },
  "lighthouse": {
    "requiredScores": {
      "accessibility": 90
    }
  }
}
