{
  "name": "@xgovformbuilder/runner",
  "version": "3.0.0",
  "description": "Digital forms runner",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "check-forms": "yarn node bin/run/check",
    "watch": "babel --watch --extensions '.ts' src -d dist --copy-files -s inline",
    "start": "node dist/index.js",
    "start:local": "NODE_ENV=development nodemon dist/index.js",
    "startdebug": "NODE_ENV=development nodemon --inspect=0.0.0.0:9228 dist/index.js",
    "dev": "concurrently 'yarn watch' 'yarn start:local'",
    "build": "yarn build:css && yarn babel-build && yarn run check-forms",
    "build:css": "yarn sass src/client/sass:public/build/stylesheets -s compressed -I . --no-source-map",
    "babel-build": "babel --extensions '.ts' src -d dist --copy-files -s inline",
    "lint": "yarn bin/run eslint .",
    "fix-lint": "yarn bin/run eslint . --fix",
    "test": "yarn lint && yarn type-check && NODE_ENV=test yarn bin/run unit-test",
    "test-cov": "yarn run unit-test-cov",
    "test:dev": "lab -T test/.transform.js -P test/**/*.test.* -v test --coverage-exclude",
    "unit-test": "lab -T test/.transform.js -P test/**/*.test.* -v test -S -v -r console -o stdout -r html -o unit-test.html -I version -l",
    "unit-test-cov": "lab -T test/.transform.js -P test/**/*.test.* -v test -t 83 -S -v -r console -o stdout -r lcov -o test-coverage/lab/lcov.info -r html -o test-coverage/lab/unit-test.html -r junit -o test-results/junit/unit-test.xml -I version -l",
    "a11y": "node test/audit/components && node lighthouse",
    "symlink-env": "./bin/symlink-config",
    "type-check": "tsc --noEmit",
    "generate-docs": "typedoc src --tsconfig tsconfig.json --out ../docs/runner/typedoc --exclude '**/*+(index|.test|.jest).ts'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/XGovFormBuilder/digital-form-builder/tree/main/builder"
  },
  "engines": {
    "node": ">=16"
  },
  "license": "SEE LICENSE IN LICENSE",
