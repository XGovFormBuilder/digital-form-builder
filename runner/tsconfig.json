{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "paths": {
      "src/*": ["src/*"],
      "server/*": ["src/server/*"],
    },
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "ES2020.Promise",
      "ES2019.Object"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src",
    "package.json"
  ]
}
