{
  "name": "@xgovformbuilder/submitter",
  "version": "1.0.0",
  "description": "Digital forms webhook queue submitter",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "watch": "babel --watch --extensions '.ts' src -d dist --copy-files -s inline",
    "start": "node dist/index.js",
    "start:local": "NODE_ENV=development nodemon dist/index.js",
    "dev": "concurrently 'yarn watch' 'yarn start:local'",
    "build": "babel --extensions '.ts' src -d dist",
    "lint": "yarn bin/run eslint .",
    "fix-lint": "yarn bin/run eslint . --fix"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@hapi/hapi": "^20.2.2",
    "hapi-pino": "8.0.0"
  },
  "devDependencies": {
    "@xgovformbuilder/queueModel": "workspace:queueModel",
    "@types/hapi": "^18.0.7",
    "@types/pino": "^7.0.5",
    "eslint": "^8.11.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-tsdoc": "^0.2.14",
    "nodemon": "^2.0.20",
    "typescript": "4.9.5"
  }
}